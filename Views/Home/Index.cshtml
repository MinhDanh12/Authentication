@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-gradient-primary text-white rounded-3 p-5 mb-4">
                <div class="container-fluid py-5">
                    <h1 class="display-5 fw-bold">
                        <i class="fas fa-shield-alt me-3"></i>Chào mừng đến với Authentication Module
                    </h1>
                    <p class="col-md-8 fs-4">
                        Hệ thống xác thực an toàn và linh hoạt với hỗ trợ đa dạng loại người dùng.
                    </p>
                    <hr class="my-4" style="border-color: rgba(255,255,255,0.3);">
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-user me-2"></i>Thông tin người dùng</h5>
                            <ul class="list-unstyled">
                                <li><strong>Tên:</strong> @ViewBag.FullName</li>
                                <li><strong>Username:</strong> @ViewBag.UserName</li>
                                <li><strong>Loại:</strong> @ViewBag.UserType</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-clock me-2"></i>Thời gian đăng nhập</h5>
                            <p class="mb-0">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-users text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Quản lý người dùng</h5>
                    <p class="card-text">
                        Hỗ trợ nhiều loại người dùng: End User, Admin, Partner, Moderator
                    </p>
                    <div class="mt-3">
                        <span class="badge bg-primary me-1">End User</span>
                        <span class="badge bg-success me-1">Admin</span>
                        <span class="badge bg-info me-1">Partner</span>
                        <span class="badge bg-warning">Moderator</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-lock text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Bảo mật cao</h5>
                    <p class="card-text">
                        Sử dụng JWT, Session, Cookie và các phương thức xác thực hiện đại
                    </p>
                    <div class="mt-3">
                        <span class="badge bg-success me-1">JWT</span>
                        <span class="badge bg-info me-1">Session</span>
                        <span class="badge bg-warning">Cookie</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-memory text-info" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Remember Me</h5>
                    <p class="card-text">
                        Chức năng ghi nhớ đăng nhập an toàn với token có thời hạn
                    </p>
                    <div class="mt-3">
                        <span class="badge bg-info">30 ngày</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin hệ thống
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6><i class="fas fa-cog me-2"></i>Tính năng chính</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Đăng nhập/Đăng ký</li>
                                <li><i class="fas fa-check text-success me-2"></i>Quản lý phiên đăng nhập</li>
                                <li><i class="fas fa-check text-success me-2"></i>Remember Me</li>
                                <li><i class="fas fa-check text-success me-2"></i>Đăng xuất an toàn</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6><i class="fas fa-shield-alt me-2"></i>Bảo mật</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>Mã hóa mật khẩu</li>
                                <li><i class="fas fa-check text-success me-2"></i>JWT Token</li>
                                <li><i class="fas fa-check text-success me-2"></i>Session Management</li>
                                <li><i class="fas fa-check text-success me-2"></i>CSRF Protection</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .jumbotron {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        border: none;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
</style>
